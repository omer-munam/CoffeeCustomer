<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lrp2"
    android:minHeight="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lrp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:padding="3dp"
            android:background="#f7f7f7"
            android:id="@+id/storedets"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_border="true"
                app:civ_border_color="#eee"
                app:civ_shadow_color="#ccc"
                app:civ_shadow_radius="1"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:padding="2dp"
                android:layout_toRightOf="@+id/img"
                android:layout_toLeftOf="@+id/delivery_time"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.balram.library.FotTextView
                    android:clickable="false"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/storename"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333"
                    app:customfont="Exo2-Bold.otf"
                    android:textSize="14dp"/>


                <com.balram.library.FotTextView
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/imgar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/storelocation"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:clickable="false"
                    android:layout_alignParentLeft="true"
                    android:textColor="#555"
                    app:customfont="Exo2-Regular.otf"
                    android:textSize="14dp"/>


                <com.balram.library.FotTextView
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliverytime"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:clickable="false"
                    android:textColor="#b13e24"
                    app:customfont="Exo2-Bold.otf"
                    android:textSize="14dp"/>

                <com.balram.library.FotTextView
                    android:layout_toRightOf="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliverycosttx"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/del_icon"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="SAR 0.00"
                    android:clickable="false"
                    android:textColor="#24975e"
                    app:customfont="Exo2-Bold.otf"
                    android:textSize="14dp"/>


            </LinearLayout>


            <com.balram.library.FotButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/delivery_time"
                android:padding="2dp"
                android:text="@string/change_del_time"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:clickable="true"
                android:background="@drawable/profile_button"
                app:customfont="Exo2-Thin.otf"
                android:textSize="8dp"/>





        </RelativeLayout>


    <LinearLayout
        android:background="@drawable/linear_left_right"
        android:orientation="vertical"
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


   </LinearLayout>
</android.support.v7.widget.CardView>
