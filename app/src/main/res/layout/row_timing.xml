<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout
    android:background="#0000"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <com.balram.library.FotTextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverydate"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:text="20-12-2018"
            android:layout_below="@+id/nameloc"
            android:textColor="@color/green"
            app:customfont="Exo2-Bold.otf"
            android:drawableLeft="@drawable/order_deltime"
            android:drawablePadding="5dp"
            android:textSize="14dp"/>

        <com.balram.library.FotTextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverytime"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:text="00:00:00"
            android:textColor="@color/red"
            app:customfont="Exo2-Bold.otf"
            android:drawablePadding="5dp"
            android:textSize="14dp"/>
    </LinearLayout>

    <com.balram.library.FotTextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cost"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:drawableLeft="@drawable/del_icon"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="Subcategory"
        android:textColor="#2e875d"
        app:customfont="Exo2-Regular.otf"
        android:textSize="14dp"/>

</RelativeLayout>


</android.support.v7.widget.CardView>
